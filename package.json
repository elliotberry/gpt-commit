{
    "name": "gpt-commit-message",
    "description": "Make chatGPT write the important documentation, making your projects more opaque, but saving time.",
    "bin": {
        "gptcommit": "./index.js"
    },
    "author": "Elliot B",
    "license": "The Unlicense",
    "main": "index.js",
    "type": "module",
    "dependencies": {
        "openai": "^4.25.0",
        "prompts": "^2.4.2"
    },
    "devDependencies": {
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.2.4"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "eslintConfig": {
        "root": true,
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "env": {
            "es2021": true,
            "node": true,
            "es6": true
        },
        "rules": {
            "no-unused-vars": "warn",
            "no-console": "off"
        }
    }
}
