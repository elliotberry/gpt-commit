{
    "name": "gpt-commit",
    "version": "0.1.5",
    "private": false,
    "description": "Who has time for commit messages? I've got a 12:pm tee-time, for God's sake.",
    "bin": {
        "gptcommit": "./index.js"
    },
    "scripts": {
        "rmconf": "rm -rf ~/.config/configstore/gpt-commit.json"
    },
    "keywords": [
        "git",
        "chatGPT",
        "commit",
        "node",
        "entertainment"
    ],
    "os": [
        "linux",
        "darwin"
    ],
    "author": "ɛʟʟɨօȶ b",
    "license": "The Unlicense",
    "main": "./index.js",
    "type": "module",
    "dependencies": {
        "configstore": "^6.0.0",
        "gpt-tokenizer": "^2.1.2",
        "prompts": "^2.4.2",
        "yargs": "^17.7.2"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.2.5"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "eslintConfig": {
        "root": true,
        "parserOptions": {
            "ecmaVersion": 12,
            "sourceType": "module"
        },
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "env": {
            "es2021": true,
            "node": true,
            "es6": true
        },
        "rules": {
            "no-unused-vars": "warn",
            "no-console": "off"
        }
    }
}
